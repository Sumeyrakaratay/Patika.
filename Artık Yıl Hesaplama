public static void main(String[] args) {

	Scanner inp = new Scanner(System.in);

	int year;
	String result;

    System.out.print("Yıl Giriniz : ");
    year = inp.nextInt();



        if(year % 100 == 0) {

            if (year % 400 == 0) {

                result = year + " bir artık yıldır.";

            } else {

                result = year + " bir artık yıl değildir.";

            }

        } else if (year % 4 == 0) {

            result = year + " bir artık yıldır.";

        } else {

            result = year + " bir artık yıl değildir.";

        }System.out.println(result);

	 }
