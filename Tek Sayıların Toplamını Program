import java.util.Scanner;

public class fonksiyonlar {

	public static void main(String[] args) {
		
		Scanner inp = new Scanner(System.in);

		int n, total = 0;
		
		do {
			System.out.print("SayÄ± Giriniz: ");
			n = inp.nextInt();
			
			if (n%2 == 1) {
				
				total += n;
				
			}
			
		} while	(n>0);
		
		
		System.out.println("Toplam: " + total);
	}
	
}
			
